@model IEnumerable<katarfelek.Models.PanelSettings>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SettingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SettingName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogoPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SettedUser)
        </th>
        
    </tr>
    
@foreach (var item in Model) {
    <tr >
        <td>
            <a href="@Url.Action("ChangeSetting","yesil",item)">@Html.DisplayFor(modelItem => item.SettingId)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SettingName)
        </td>
        <td  >
            <a target="_blank" href="@Url.Content("~"+item.LogoPath)"><img style="max-width:200px;max-height:100px" src="@Url.Content("~" + item.LogoPath.ToString())" /></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SettedUser)
        </td>
        
